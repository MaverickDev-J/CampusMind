                "type": "object",
                "required": [
                    "email",
                    "name",
                    "password",
                    "role"
                ],
                "title": "UserCreate",
                "examples": [
                    {
                        "email": "stu@tcet.com",
                        "name": "John Doe",
                        "password": "secret123",
                        "profile": {
                            "branch": "COMP",
                            "roll_no": "221001",
                            "year": 3
                        },
                        "role": "student"
                    }
                ]
            },
            "UserResponse": {
                "properties": {
                    "user_id": {
                        "type": "string",
                        "title": "User Id"
                    },
                    "email": {
                        "type": "string",
                        "title": "Email"
                    },
                    "name": {
                        "type": "string",
                        "title": "Name"
                    },
                    "role": {
                        "$ref": "#/components/schemas/RoleEnum"
